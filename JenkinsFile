pipeline {
    agent any

    stages {
        stage('Listar Días de la Semana') {
            steps {
                script {
                    def diasSemana = ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo"]
                    echo "Días de la semana ${diasSemana}."
                }
            }
        }
        stage('Identificar Día de la Semana') {
            steps {
                script {
                    def today = new Date()
                    def dayOfWeek = today.format('EEEE')
                    echo "Hoy es ${dayOfWeek}."
                }
            }
        }
    }
}
